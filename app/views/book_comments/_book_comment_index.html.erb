<% @book.book_comments.each do |book_comment| %>
    <li class="comment"><%= book_comment.created_at.strftime('%Y/%m/%d') %>
        <div class="comment-body bb">

			<%= link_to (book_comment.user) do %>
				<%= attachment_image_tag(book_comment.user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %><br>
				<%= book_comment.user.name %>
			<% end %>

			<%= book_comment.comment %>

			<% if book_comment.user == current_user %>
				<%= link_to "Destroy", book_book_comments_path(@book, book_comment_id: book_comment.id), method: :delete , class: "btn-sm btn-danger" %>
			<% end %>

        </div>
    </li>
<% end %>
